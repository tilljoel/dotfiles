[user]
        name = Joel Larsson
        email = tilljoel@gmail.com
[merge]
        tool = vimdiff
[alias]
        aa= !git add -u && git status
        edit-unmerged = "!f() { git ls-files --unmerged | cut -f2 | sort -u ; }; vim `f`"
        add-unmerged = "!f() { git ls-files --unmerged | cut -f2 | sort -u ; }; git add `f`"
        ap = !git add --patch && git status
        c = commit -m
        pr = pull --rebase
        logf = log --name-status
        st = status
        ci = commit
        br = branch
        co = checkout
        df = diff --color=always
        dc = diff --cached --color=always
        lg = log -p
        who = shortlog -n -s --no-merges
        today = log --stat --since='1 Day Ago' --graph --pretty=oneline --abbrev-commit --date=relative
        pl = log --stat --pretty=format:'[%h] %ae, %ar: %s'
        d = difftool
        ds = diff --stat=160,120
        # Fancy logging.
        #   h = head
        #   hp = head with patch
        #   r = recent commits, only current branch
        #   ra = recent commits, all reachable refs
        #   l = all commits, only current branch
        #   la = all commits, all reachable refs
        head = !git l -1
        h = !git head
        hp = "!source ~/.githelpers && show_git_head"
        r = !git l -30
        ra = !git r --all
        l = "!source ~/.githelpers && pretty_git_log"
        la = !git l --all
	ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
[core]
        editor = vim
	excludesfile = /opt/boxen/config/git/gitignore
[diff]
        tool = vimdiff
[pager]
        diff =
[color]
        ui = true
[github]
        user = tilljoel
[difftool]
        prompt = false
[init]
	templatedir = ~/.git_template
[commit]
    template = ~/.git_template/commit-template
[pull]
	rebase = true

[hub]
protocol = https

[credential]
helper = /opt/boxen/bin/boxen-git-credential
[push]
	default = simple
