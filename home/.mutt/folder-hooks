# send hooks for sending mail out per mailbox; this way you can be in a
# mailbox and you'll send mail out with the address you would normally use
# in that mailbox


folder-hook .                  		source ~/.mutt/defaults
folder-hook "!$"               		source ~/.mutt/defaults

folder-hook =list/forskningsavd         source ~/.mutt/defaults.maillist
folder-hook =list/mosig                 source ~/.mutt/defaults.maillist
folder-hook =list/maktenoppenheten      source ~/.mutt/defaults.maillist

folder-hook =inbox-tilljoel                 'source ~/.mutt/account.tilljoel'
folder-hook =inbox-popdevelop               'source ~/.mutt/account.popdevelop'
folder-hook =inbox-weskins                  'source ~/.mutt/account.weskins'
folder-hook =inbox-large                    'source ~/.mutt/account.popdevelop'

folder-hook =ACTION                         'source ~/.mutt/account.popdevelop'
folder-hook =RESPOND                        'source ~/.mutt/account.popdevelop'
folder-hook =WAITING                        'source ~/.mutt/account.popdevelop'



