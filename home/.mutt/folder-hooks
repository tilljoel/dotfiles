# send hooks for sending mail out per mailbox; this way you can be in a
# mailbox and you'll send mail out with the address you would normally use
# in that mailbox


folder-hook .                  		source ~/.mutt/defaults
folder-hook "!$"               		source ~/.mutt/defaults

folder-hook =list/hacks                 source ~/.mutt/defaults.maillist
folder-hook =list/fb-groups             source ~/.mutt/defaults.maillist
folder-hook =list/google-groups         source ~/.mutt/defaults.maillist

folder-hook =popfaktura-inbox               'source ~/.mutt/account.popfaktura'
folder-hook =popfaktura-multi               'source ~/.mutt/account.popfaktura'
folder-hook =popdevelop-inbox               'source ~/.mutt/account.popdevelop'
folder-hook =popdevelop-multi               'source ~/.mutt/account.popdevelop'
folder-hook =weskins-inbox                  'source ~/.mutt/account.weskins'
folder-hook =weskins-multi                  'source ~/.mutt/account.weskins'
folder-hook =tilljoel-inbox                 'source ~/.mutt/account.tilljoel'



